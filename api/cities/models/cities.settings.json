{
  "kind": "collectionType",
  "collectionName": "cities",
  "info": {
    "name": "Cities",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "private": false
    },
    "coordinates": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "intro": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "is_featured": {
      "type": "boolean",
      "default": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "blocks.media",
        "blocks.section",
        "blocks.quote"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "related_approaches": {
      "collection": "approach"
    },
    "related_cities": {
      "collection": "cities"
    },
    "report": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "networks": {
      "via": "cities",
      "collection": "networks"
    },
    "country": {
      "via": "cities",
      "model": "countries"
    },
    "approaches": {
      "via": "city",
      "collection": "approach"
    },
    "subtitle": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true
    },
    "takeaways": {
      "type": "component",
      "repeatable": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "city.takeaway"
    }
  }
}
