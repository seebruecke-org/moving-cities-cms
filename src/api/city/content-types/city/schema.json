{
  "kind": "collectionType",
  "collectionName": "cities",
  "info": {
    "singularName": "city",
    "pluralName": "cities",
    "displayName": "City",
    "name": "city"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "private": false
    },
    "coordinates": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "is_featured": {
      "type": "boolean",
      "default": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "blocks.media",
        "blocks.section",
        "blocks.quote",
        "blocks.networks-summary"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "networks": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::network.network",
      "mappedBy": "cities"
    },
    "country": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::country.country",
      "inversedBy": "cities"
    },
    "approaches": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::approach.approach",
      "mappedBy": "city"
    },
    "subtitle": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": false
    },
    "takeaways": {
      "type": "component",
      "repeatable": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "city.takeaway"
    },
    "icon": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "text"
    },
    "summary": {
      "type": "component",
      "repeatable": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "helper.summary",
      "required": false
    },
    "report": {
      "type": "component",
      "repeatable": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": false,
      "component": "city.report"
    },
    "metadata": {
      "type": "component",
      "repeatable": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "helper.social-metadata"
    },
    "report_file": {
      "type": "media",
      "allowedTypes": [
        "files"
      ],
      "multiple": false,
      "required": false
    },
    "reasoning": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "richtext"
    }
  }
}
